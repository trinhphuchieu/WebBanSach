<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">


    <title>Trang Admin</title>
    <script src="https://cdn.tiny.cloud/1/nv8wphh7qk2gkyppn8n8furdlpq3yjpp87atstiffgd6xk1e/tinymce/5/tinymce.min.js"
        referrerpolicy="origin"></script
    <!-- Custom fonts for this template-->
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        {{> Admin/PhanDau}}
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>
                    <!-- Topbar Navbar -->
                    {{>Admin/PhanTop}}
                    <!-- End of Topbar -->

                    <!-- Begin Page Content -->
                    <div class="container-fluid">

                        <!-- Page Heading -->
                        <div class="d-sm-flex align-items-center justify-content-between mb-4">
                            <h1 class="h3 mb-0 text-gray-800">Cập Nhật Sách</h1>

                        </div>

                        <!-- Content Row -->
                        {{#sach}}
                        <form method="POST" enctype="multipart/form-data" action="/admin/sach/{{this.ma_sach}}?_method=PUT">
                        
                            <div class="form-group">
                                <label for="exampleFormControlInput1">Mã Sách </label>
                                <input type="text" name="ma_sach" class="form-control"  value="{{this.ma_sach}}"/>
                            </div>
                            <div class="form-group">
                                <label for="exampleFormControlInput1">Tên Sách</label>
                                <input type="text" name="ten" class="form-control" id="exampleFormControlInput1" value="{{this.ten_sach}}">
                            </div>

                            <div class="form-group">
                            <label for="inputState">Thể Loại</label>
                            <select id="inputState" name="the_loai" class="form-control" value="{{this.the_loai}}">
                                <option value="{{this.the_loai}}" hidden="hidden" selected="selected">{{this.the_loai}}</option>
                                <option value="...">...</option>
                                <option value="Tiểu Thuyết">Tiểu Thuyết</option>
                                <option value = "Kiếm Hiệp">Kiếm Hiệp</option>
                                <option value = "Giaó Dục">Giaó Dục</option>
                            </select>
                            </div>
                            <div class="form-group">
                                <label for="exampleFormControlInput1">Tác Giả</label>
                                <input type="text" name="tac_gia" value="{{this.tac_gia}}" class="form-control" id="exampleFormControlInput1" placeholder="">
                            </div>

                            <div class="form-group">
                                <label for="exampleFormControlTextarea1">Mô Tả</label>
                                <textarea name="mo_ta" class="form-control" id="exampleFormControlTextarea1" >{{this.mo_ta}}</textarea>
                            </div>
                            
                            <div class="form-group">
                                <label for="exampleFormControlTextarea1">Số Lượng</label>
                                <input type="number" name="so_luong" class="form-control" value="{{this.so_luong}}"></input>
                            </div>

                            <div class="form-group">
                                <label for="exampleFormControlTextarea1">Giá Niêm Yết</label>
                                <input type="number" name="gia_nien_yet" class="form-control" value="{{this.gia_nien_yet}}"></input>
                            </div>
                            <div class="form-group">
                                <label for="exampleFormControlTextarea1">Giá Bán</label>
                                <input type="number" name="gia_ban" class="form-control" value="{{this.gia_ban}}"></textarea>
                            </div>

                            <div class="form-group">
                                <label for="exampleFormControlFile1">Hình Ảnh</label>
                                <input type="file"  name="hinh_anh" accept="image/png, image/jpeg, image/jpg" class="form-control-file" id="imgFile">
                                <img id="prevView"  style="height:300px ; width:200px; " src="/uploads/{{this.hinh_anh}}" alt="your image" />
                            </div>
                            <button type="submit" class="btn btn-primary">Cập Nhật</button>
                        
                        </form>
                        {{/sach}}
                        <!-- Content Row -->
                    </div>


            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            {{> Admin/PhanCuoi }}
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="login.html">Logout</a>
                </div>
            </div>
        </div>
    </div>
<script>

    tinymce.init({ selector: 'textarea' });
    imgFile.onchange = evt => {
        const [file] = imgFile.files;
        if (file) {
            prevView.src = URL.createObjectURL(file);
        }
    }

</script>

    {{> Admin/PhanJS}}
    </body>

</html>